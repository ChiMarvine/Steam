<section class="author">
    <div class="authorimage" style="background: url({{author.image}})"></div>
    <h4>{{author.name}}</h4>
    <p class="bio">{{author.bio}}</p>
    <p class="meta"><i class="fa fa-fw fa-globe"></i> <a href="{{author.website}}">{{author.website}}</a> <i class="fa fa-fw fa-map-marker" style="padding-left:10px;"></i>{{author.location}}</p>
</section>
